<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@mipmap/appbg3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Add/Share"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:id="@+id/titleText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Adding"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/titleText"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/addTitle"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#32dcef"
        android:textSize="15dp"
        android:text="Scan QR Code"
        android:layout_below="@id/addTitle"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/scanButton"
        android:onClick="addFriends"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/scanButton"
        android:layout_marginTop="5dp"
        android:hint="Enter your friend's code here"
        android:id="@+id/codeEditText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#32dcef"
        android:textSize="15dp"
        android:text="Enter"
        android:layout_toRightOf="@+id/codeEditText"
        android:layout_below="@+id/scanButton"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:onClick="enterFriendCode"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Sharing"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/codeEditText"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/shareTitle"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="I'm"
        android:layout_toRightOf="@id/shareTitle"
        android:layout_below="@id/codeEditText"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/namePrompt"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/codeEditText"
        android:layout_marginTop="10dp"
        android:hint="Your name"
        android:id="@+id/nameEditText"
        android:layout_toRightOf="@+id/namePrompt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#32dcef"
        android:textSize="15dp"
        android:text="Enter"
        android:layout_toRightOf="@+id/nameEditText"
        android:layout_below="@+id/codeEditText"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:onClick="enterName"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/qrImage"
        android:layout_marginTop="18dp"
        android:src="@drawable/id_noid"
        android:layout_centerInParent="true"
        android:layout_below="@id/namePrompt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_below="@+id/qrImage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="If your friend isn't nearby, send them this code."
        android:id="@+id/instructionText"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="16dp"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_below="@+id/instructionText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="Please enter your schedule first."
        android:id="@+id/myCodeText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#32dcef"
        android:textSize="14dp"
        android:text="Copy"
        android:layout_toRightOf="@+id/myCodeText"
        android:layout_below="@+id/instructionText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:onClick="copyCode"
        />


</RelativeLayout>