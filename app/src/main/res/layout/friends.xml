<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout tools:context="com.fuady.ssa_app_redo1.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    android:background= "@mipmap/appbg4">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shedule"
            android:text="Schedule"
            android:id="@+id/button10"
            android:onClick="viewSchedule"
            android:layout_gravity="left|bottom"
            android:background = "@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/barcodeicon"
            android:text="Barcode"
            android:id="@+id/button11"
            android:onClick="viewBarcode"
            android:layout_gravity="bottom"
            android:background = "@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button10"
            android:layout_marginLeft="50dp"  />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/friends"
            android:text="Friends"
            android:id="@+id/button12"
            android:layout_gravity="bottom"
            android:background = "@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button11"
            android:layout_marginLeft="50dp"  />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/other"
            android:text="Others"
            android:id="@+id/button13"
            android:onClick="viewOthers"
            android:layout_gravity="bottom|right"
            android:background = "@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/button12"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/listView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp" />


    <ImageView
        android:id="@+id/button20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"

        android:layout_gravity="top|right"
        android:background="@android:color/transparent"
        android:onClick="Share"
        android:src="@drawable/shareicon"
        android:layout_alignParentEnd="true"/>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/listView2"
        android:layout_above="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button20" />
</RelativeLayout>

