<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout tools:context="com.fuady.ssa_app_redo1.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background= "@mipmap/appbg4">



    <ImageView
        android:id="@+id/button9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plusicon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|right"
        android:background="@android:color/transparent"
        android:onClick="scanNow"
        android:text="Scan Barcode" />

    <ImageView
        android:id="@+id/barcodeImage"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/barcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button9"
        />
    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/barcodeImage" />
    <EditText
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:inputType="text"
        android:onClick="showSoftKeyboard"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_format" />
    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_content"
        android:background="@android:color/transparent"
        android:onClick="addTextCode"
        android:text="Enter"
        android:layout_marginLeft="75dp"
        />
    <Button
        android:id="@+id/deleteButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_content"
        android:layout_toRightOf="@+id/scan_button"
        android:background="@android:color/transparent"
        android:onClick="deleteBarcode"
        android:text="Delete"
        />
        <ImageView
            android:src="@drawable/shedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Schedule"
            android:id="@+id/button5"
            android:onClick="viewSchedule"
            android:layout_gravity="left|bottom"
            android:background = "@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Barcode"
        android:id="@+id/button6"
        android:src="@drawable/barcodes"
        android:background = "@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button5"
        android:layout_marginLeft="50dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/friend"
        android:text="Friends"
        android:id="@+id/button7"
        android:onClick="viewFriends"
        android:layout_gravity="bottom"
        android:background = "@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button6"
        android:layout_marginLeft="50dp"  />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/other"
            android:textSize="10sp"
            android:text="Command Center"
            android:id="@+id/button8"
            android:onClick="viewOthers"
            android:layout_toRightOf="@id/button7"
            android:layout_marginLeft="50dp"
            android:background = "@android:color/transparent"
            android:layout_alignParentBottom="true"
             />




    </RelativeLayout>

